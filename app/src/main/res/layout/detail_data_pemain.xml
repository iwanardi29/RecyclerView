<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_pemain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center"
        android:src="@drawable/benzema"
        />

    <TextView
        android:id="@+id/txtdatapribadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:text="Data Pribadi"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama :"
            />
        <TextView
            android:id="@+id/txt_nama_pemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="Benzema"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat lahir :"
            />
        <TextView
            android:id="@+id/txt_tempat_lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="Benzema"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir :"
            />
        <TextView
            android:id="@+id/txt_tanggal_lahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="Benzema"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posisi :"
            />
        <TextView
            android:id="@+id/txt_posisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="Benzema"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi :"
            />
        <TextView
            android:id="@+id/txt_tinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0B0A"
            android:text="Benzema"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnclose"
        android:text="Close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />



</LinearLayout>